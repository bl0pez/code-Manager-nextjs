generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model CodeBlue {
  id        String   @id @default(uuid())
  createdAt DateTime
  team      String
  location  String
  operator  String
  informant String
}

model CodeGreen {
  id        String   @id @default(uuid())
  createdAt DateTime
  location  String
  event     String
  police    Boolean
  informant String
  operator  String
}

model CodeRed {
  id                     String    @id @default(uuid())
  createdAt              DateTime
  location               String
  informant              String
  operator               String
  firefightersCallTime   DateTime?
  COERadialCommunication Boolean
}

model CodeAir {
  id               String   @id @default(uuid())
  createdAt        DateTime
  location         String
  emergencyDetails String?
  informant        String
  operator         String
}

model Operator {
  id       String @id @default(uuid())
  fullName String
}

model Team {
  id    String @id @default(uuid())
  title String
}

model User {
  id       String  @id @default(uuid())
  fullName String
  email    String  @unique
  isActive Boolean @default(false)
  password String
  role     Role    @default(user)
}

enum Role {
  user
  operator
  admin
}
