generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id       String  @id @default(uuid())
  fullName String
  email    String  @unique
  isActive Boolean @default(false)
  password String
  role     Role    @default(user)
}

model CodeBlue {
  id        String   @id @default(uuid())
  createdAt DateTime
  team      String
  location  String
  operator  String
  officer   String
}

model Operator {
  id       String @id @default(uuid())
  fullName String
}

model Team {
  id    String @id @default(uuid())
  title String
}

enum Role {
  user
  operator
  admin
}
